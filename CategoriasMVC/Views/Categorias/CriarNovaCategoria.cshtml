@model CategoriasMVC.Models.CategoriaViwerModel
<h2>Criar nova categoria</h2>

<!-- Formulário para criar uma categoria -->
<form asp-action="CriarNovaCategoria" method="post">
	<div class="form-group">
		<label asp-for="Nome" class="control-label">Nome</label>
		<input asp-for="Nome" class="form-control" />
		<span asp-validation-for="Nome" class="text-danger"></span>
	</div>
    
	<div class="form-group">
		<label asp-for="ImagemUrl" class="control-label">URL da Imagem</label>
		<input asp-for="ImagemUrl" class="form-control" />
		<span asp-validation-for="ImagemUrl" class="text-danger"></span>
	</div>

	<button type="submit" class="btn btn-primary">Criar</button>
	<a asp-action="Index" class="btn btn-secondary">Retorna</a>
	
	@if (@ViewBag.Erro != null)
	{
		<div style="color:red">
			<h4>@ViewBag.Erro</h4>
		</div>
	}
</form>

